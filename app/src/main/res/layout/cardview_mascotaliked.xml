<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascotaLiked"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imgFotoMascota"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@drawable/droopy_dog"/>


            <RelativeLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cvRelative">

                <ImageView
                    android:id="@+id/imgIconoLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icons8_dog_bone_80" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imgIconoLike"
                    android:gravity="left"
                    android:text="Droopy"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cvContadorLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@+id/cvIconoLike"
                    android:text="10"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp" />


                <ImageView
                    android:id="@+id/cvIconoLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icons8_dog_bone_50_1" />
            </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>