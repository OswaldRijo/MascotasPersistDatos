<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oswald.mascotas.fragments.PerfilFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imgPerfil"
        android:src="@drawable/icono"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/perfilNombre"
        android:layout_below="@id/imgPerfil"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/topPadding">
        <TextView
            android:text="Snoopy"
            android:layout_marginTop="@dimen/topPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="@string/nombre"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/perfilNombre"
        android:layout_marginTop="@dimen/topPadding">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</RelativeLayout>
